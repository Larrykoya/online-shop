<!DOCTYPE html>
<html>
  <head>
    <title>Shop All-Contact Us</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div id="top"></div>
    <img
      src="https://res.cloudinary.com/larrykoya/image/upload/v1683949176/grocery-store-displays_xrcnzu.jpg"
      alt=""
      width="100%"
      height="150px"
    />
    <div id="site_title">
      <a href="/">
        <p class="headers">Shop All</p>
        <img
          src="https://res.cloudinary.com/larrykoya/image/upload/v1683949199/external-shopping-cart-supermarket-photo3ideastudio-lineal-photo3ideastudio_gbyezv.png"
          alt=""
      /></a>
    </div>

    <ul id="nav">
      <li><a href="/">HOME</a></li>
      <li><a href="items">ITEMS</a></li>
      <li><a href="cart">CART</a></li>
      <li><a href="contact">CONTACT</a></li>
    </ul>

    <h2>Enter Sign-up Details:</h2>
    <form id="form" onsubmit="signup(event)">
      <div style="padding: 15px">
        <label for="firstname">Enter Firstname: </label>
        <input
          style="margin-left: 20px"
          type="text"
          id="firstname"
          name="firstName"
          placeholder="Firstname"
          required
        />
      </div>
      <div style="padding: 15px">
        <label for="lastname">Enter Lastname: </label>
        <input
          style="margin-left: 20px"
          type="text"
          id="lastname"
          name="lastName"
          placeholder="Lastname"
          required
        />
      </div>
      <div style="padding: 15px">
        <label for="email">Enter email: </label>
        <input
          style="margin-left: 45px"
          type="email"
          id="email"
          name="email"
          placeholder="Example@email.com"
          required
        />
      </div>

      <div style="padding: 15px">
        <label for="password">Create password: </label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter password"
          required
        />
      </div>

      <div style="padding: 15px">
        <label for="confirm-password">Confirm password: </label>
        <input
          type="password"
          id="confirm-password"
          name="confirmPassword"
          placeholder="Confirm password"
          required
        />
      </div>
      <h4 style="color: red" id="signup-error-message"></h4>
      <button onclick="creatingUser()">SIGN UP</button>
    </form>
    <p>
      Do you have an accout? <a href="/login"><button>Login</button></a>
    </p>
    <script>
      let submitBtn = document.getElementById("submit-button");
      const creatingUser = () => {
        submitBtn.innerHTML = "Creating...Please wait";
        setInterval(() => {
          setTimeout(() => {
            submitBtn.style.backgroundColor = "#1d3557";
          }, 400);
          submitBtn.style.backgroundColor = "#e63946";
        }, 800);
      };
    </script>
  </body>
  <script src="auth.js"></script>
</html>
